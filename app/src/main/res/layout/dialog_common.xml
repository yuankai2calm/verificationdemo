<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:orientation="vertical">

    <com.example.yuankai2calm.localverificationdemo.DialogTitleView
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </com.example.yuankai2calm.localverificationdemo.DialogTitleView>

    <FrameLayout
        android:id="@+id/fl_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/global_dialog_padding"/>
    
    <View
        android:id="@+id/v_button_bar_divider"
        style="@style/section_item_divider"
        android:visibility="visible"/>
    
    <LinearLayout
        android:id="@+id/ll_button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/negative_bt"
            style="@style/dialog_button"
            android:visibility="gone"/>
        
        <View
            android:id="@+id/v_button_divider"
            style="@style/section_item_divider"
            android:visibility="gone"/>

        <Button
            android:id="@+id/positive_bt"
            style="@style/dialog_button"
            android:textStyle="bold"
            android:visibility="gone"/>
        
        
    </LinearLayout>

</LinearLayout>
